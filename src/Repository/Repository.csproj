<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Project guid to satisfy SonarQube -->
    <ProjectGuid>6E1181E6-6E8C-4534-AA95-A35EF6913550</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" />
    <PackageReference Include="NLog" />
  </ItemGroup>

  <!-- Each production project automatically makes internals visible to testproject with same name (suffixed with ".Tests"). -->
